{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Все статьи</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Annotation</th>
                <th>Content</th>
                <th>Views</th>
                <th>ArtDateTime</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.title }}</td>
                <td>{{ article.annotation }}</td>
                <td>{{ article.content }}</td>
                <td>{{ article.views }}</td>
                <td>{{ article.artDateTime ? article.artDateTime|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('article_new') }}">Create new</a>
{% endblock %}
